"UnlitTwoTexture"
{
	"$baseTexture" "models/holo_screens/tv_imc_map_grid_01_col"
	"$texture2" "models/holo_screens/tv_imc_map_world_01_col"
//	"$additive" 1
	"$translucent" 1

//	"$color" "[3 3 3] "
	
	$allowoverbright 1
	"$color2" "[1.3 1.3 1.3]"
	
	
	"$rotatespeed" .1
	"$translatespeed" "[1 1]"
	"$t2scale" 1
	

	"Proxies"
	{
		//chevron flicker
		"UniformNoise"
		{
			"minVal" .9
			"maxVal" 1
			"resultVar" "$alpha"
		}		
	
		"TextureScroll"
		{
			"textureScrollRate" .01
			"textureScrollAngle" 180
			"textureScrollVar" "$translatespeed"
		}		

		//rotate the basetexture using a variable
		"LinearRamp"
		{
			"rate" 1
			"resultVar" "$rotatespeed"
		}

		
		"Sine"
		{
			"sineMin" .4
			"sineMax" .7
			"sinePeriod" 100
			"resultVar" "$t2scale"
		}
			
		
		"TextureTransform"
		{
			"rotateVar" "$rotatespeed"
			"translateVar" "$translatespeed"
			"scaleVar" "$t2scale"
			"resultvar" "$texture2transform"			
		}
		
		
	}
}